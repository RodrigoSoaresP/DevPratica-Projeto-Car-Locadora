@model CarLocadora.Modelo.FormaPagamentoModel




<br />
<div class="row">
	<div class="col-md-3">
		<div class="form-group">
			<label asp-for="Descrição" class="control-label"></label>
			<input asp-for="Descrição" class="form-control" />
			<span asp-validation-for="Descrição" class="text-danger"></span>
		</div>
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-2">
		<div class="form-group form-check">
			<label class="form-check-label">
				<input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
			</label>
		</div>
	</div>
</div>
<br />
<br /> 

<div class="form-group">
	<input type="submit" value="Salvar" class="btn btn-success" />
	<a asp-action="Index"> <input class="btn btn-primary" value="Voltar para lista" /> </a>

	<br />
</div>
