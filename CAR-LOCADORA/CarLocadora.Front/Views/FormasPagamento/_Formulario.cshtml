@model CarLocadora.Modelo.FormasPagamentoModel


<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control maskCPF" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Descrição" class="control-label"></label>
            <input asp-for="Descrição" class="form-control" />
            <span asp-validation-for="Descrição" class="text-danger"></span>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>
    </div>

    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="DataInclusao" class="control-label"></label>
            <input asp-for="DataInclusao" class="form-control" disabled />
            <span asp-validation-for="DataInclusao" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="DataAlteracao" class="control-label"></label>
            <input asp-for="DataAlteracao" class="form-control" disabled />
            <span asp-validation-for="DataAlteracao" class="text-danger"></span>
        </div>
    </div>
</div>


<br />
<div class="form-group">
	<input type="submit" value="Salvar" class="btn btn-success" />
	<a asp-action="Index"> <input class="btn btn-primary" value="Voltar para lista" /> </a>

	<br />
</div>
